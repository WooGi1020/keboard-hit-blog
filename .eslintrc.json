{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb", // Airbnb 린트 적용
    "airbnb/hooks", // React Hook 관련 규칙 적용
    "plugin:@typescript-eslint/recommended", // TypeScript 관련 규칙 적용
    "next/core-web-vitals",
    "next/typescript",
    "prettier" // Prettier와 충돌 방지
  ],
  "parser": "@typescript-eslint/parser", // TypeScript 파서 적용
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2022, // 최신 ECMAScript 버전 사용
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint"],
  "rules": {
    "react/jsx-filename-extension": [
      "warn",
      { "extensions": [".ts", ".tsx"] } // JSX 확장자 규칙을 경고로 바꾸고 .tsx 파일 허용
    ],
    "import/prefer-default-export": "off", // 기본 내보내기 규칙 비활성화
    "no-console": "warn", // 콘솔 사용 시 경고
    "react/prop-types": "off", // PropTypes 사용 비활성화 (TypeScript 사용 시)
    "no-underscore-dangle": "off", // 변수명에 언더스코어(_) 허용
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }] // 사용하지 않는 변수 중 _로 시작하는 변수는 무시
  }
}
